.signup
  form.signup-form(action="/signup", method="post")
    input.input-field(type="text", id="username", name="username", placeholder="Username")
    input.input-field(type="email", id="email", name="email", placeholder="E-mail")
    input.input-field(type="password", id="password", name="password", placeholder="Password")
    input.input-field(type="password", id="passconf", name="passconf", placeholder="Confirm Password")
    button(type="submit") Enviar
