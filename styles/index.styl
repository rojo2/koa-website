@import "constants"

html, body
  width 100%
  height 100%
  margin 0
  padding 0

body
  display flex
  min-height 100vh
  flex-direction column

header
  background #000
  color #fff
  min-height 4rem

main
  flex 1

footer
  background #000
  color #fff
  min-height 4rem

h1, h2, h3, h4, h5, h6
  color inherit

button,
input[type="submit"],
input[type="reset"],
input[type="button"],
.button
  background #333
  color #fff
  padding 1rem 2rem
  border-radius 0.25rem

form
  display flex
  flex-direction column
